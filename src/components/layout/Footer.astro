import { FaPhoneAlt, FaInstagram, FaFacebookF} from "react-icons/fa";

import { IoLocationSharp } from "react-icons/io5";
---
<section>
    <div class="socials">
        <a href="https://www.facebook.com/martincesarskypropiedades" target="_blank"><FaFacebookF/></a>
        <a href="https://www.instagram.com/martincesarskypropiedades/" target="_blank" class="instagramLogo"><FaInstagram /></a>
    </div>
    <div class="dataContainer">
        <div> 
            <span>
                <IoIosMail/> 
            </span>
            <p>
                martin@martincesarsky.com.ar
            </p>
        </div>
        <div> 
            <span>
                <FaPhoneAlt/> 
            </span>
            <p class="numero">
                011 4704-6925
            </p>
        </div>
        <div class="directionContainer"> 
            <span >
                <IoLocationSharp /> 
            </span>
            <div class="ubicacionContainer">
                <a href="https://maps.app.goo.gl/uGdhM7DeHQ2qpWGn6" class="direction">
                    Suc. C.A.B.A: Ramallo
                    2300, C.A.B.A.
                </a>
                <a href="https://maps.app.goo.gl/Ri1wwTRBmWWyExW18" class="direction">
                    Suc. San Isidro 
                    Ituzaingó 608
                </a>
            </div>
        </div>
    </div>
    <div class="copy">
        <span>© 2025 Martin Cesarsky Propiedades.</span>
        <span>Software Inmobiliario - Tokko Broker</span>
    </div>
</section>

<style>
    section{
        background-color: #333;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 80px;
        font-family: 'ManropeB', sans-serif;
    }
    .socials{
        display: flex;
        align-items: center;
        gap: 20px;
        font-size: 35px;
        padding: 30px 0px;
    }
    .socials a{
        display: flex;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: rgba(255, 255, 255, 0);
        border: 1px solid white;
        width: 35px;
        height: 35px;
        border-radius: 100%;
        color: #ffffff;
        font-size: 22px;
    }
    .dataContainer {
        border-top: 1px solid rgba(255, 255, 255, 0.574);
        border-bottom: 1px solid rgba(255, 255, 255, 0.574);
        display: flex;
        flex-direction: column;
        width: 34%;
        color: white;
        padding: 1rem;
        padding-bottom: 30px;
        gap: 20px;

    }
    .dataContainer div{
        display: flex;
        align-items: center;
        gap: 15px;
        font-size: 1.1rem;
    }
    .dataContainer div span{
        background-color: rgb(255, 255, 255);
        height: 35px;
        width: 35px;
        border-radius: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 20px;
        color: #333;
        
    }
    .dataContainer .directionContainer{
        align-items: flex-start;
        text-decoration: none;
        margin-top: 10px;
    }
    .ubicacionContainer{
        display: flex;
        flex-direction: column;
        gap: 10px;


    }
    .direction{
        margin: 0px;
        width: 170px;
        font-family: 'Manrope', sans-serif;
        color: white;
        text-decoration: none;
    }
    .copy{
        display: flex;
        justify-content: space-between;
        width: 35%;
        padding: 35px 0px;
        font-size: 0.9rem;
        color: white;
        font-family: 'Manrope', sans-serif;
    }

</style>